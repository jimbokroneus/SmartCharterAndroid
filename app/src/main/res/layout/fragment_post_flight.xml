<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.smartcharter.smartcharterandroid.PostFlight">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                style="?android:textAppearanceLarge"
                android:text="Post a Flight"
                android:id="@+id/page_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Title"
                android:id="@+id/title_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:lines="4"
                android:hint="details"
                android:id="@+id/details_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/departure_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Departure City"
                    android:layout_weight="1"
                    android:id="@+id/departure_city_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/departure_spinner"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:inputType="date"
                        android:hint="Departure Date"
                        android:id="@+id/departure_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_weight="1"
                        android:inputType="time"
                        android:hint="Departure Time"
                        android:id="@+id/departure_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/arrival_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Arrival City"
                    android:layout_weight="1"
                    android:id="@+id/arrival_city_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/arrival_spinner"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:inputType="date"
                        android:hint="Arrival Date"
                        android:id="@+id/arrival_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_weight="1"
                        android:inputType="time"
                        android:hint="Arrival Time"
                        android:id="@+id/arrival_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Post Flight"
                android:id="@+id/post_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
